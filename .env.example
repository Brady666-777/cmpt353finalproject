# Environment Variables for VancouverPy Project
# Copy this file to .env and add your actual API keys

# City of Vancouver Open Data Portal API Key
# Register at: https://opendata.vancouver.ca/
VANCOUVER_API_KEY=your_vancouver_api_key_here

# Yelp Fusion API Key
# Register at: https://www.yelp.com/developers/v3/manage_app
YELP_API_KEY=your_yelp_api_key_here

# Optional: Statistics Canada API Key
# Some StatCan data may require authentication
STATCAN_API_KEY=your_statcan_api_key_here

# Database Configuration (if using a database)
# DATABASE_URL=postgresql://username:password@localhost:5432/vancouvpy

# Model Configuration
MODEL_RANDOM_STATE=42
TEST_SIZE=0.2
CROSS_VALIDATION_FOLDS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=data/logs/application.log
